<% layout('layout') -%>
<h1>Customers</h1>
<div class="container">
    <table id="table-cluster" class="table table-striped table-responsive">
        <thead>
        <th>#</th>
        <th>Customer</th>
        <th>Address</th>
        <th>Phone</th>
        <td> &nbsp;</td>
        </thead>
        <tbody>
            <% for(var i=0; i<customers.length; i++) { %>
                <tr>
                    <td><%= customers[i].id %></td>
                    <td><%= customers[i].name %></td>
                    <td><%= customers[i].address %></td>
                    <td><%= customers[i].phone %></td>
                    <td>
                        <a href="customers/edit/<%= customers[i].id %>">edit</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
        <tfoot>
        <tr>
            <td>
                <a href="customers/add">Add</a>
            </td>
        </tr>
        </tfoot>
    </table>
</div>


